	<os-core:space id="space" url="/./marketDataSpace">
		<os-core:properties>
			<props>
				<!-- <prop key="space-config.proxy-settings.connection-retries">1800</prop> 
					<prop key="space-config.engine.cache_policy">1</prop> <prop key="space-config.external-data-source.usage">read-only</prop> 
					<prop key="cluster-config.cache-loader.external-data-source">true</prop> 
					<prop key="cluster-config.cache-loader.central-data-source">true</prop> <prop 
					key="cluster-config.mirror-service.url">jini://*/mirror-service_container/mirror-service 
