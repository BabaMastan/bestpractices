				<prop key="space-config.QueryProcessor.date_format">MM/dd/yyyy HH:mm:ss</prop>
				<prop key="space-config.QueryProcessor.time_format">HH:mm:ss</prop>
				<!-- <prop key="cluster-config.groups.group.repl-policy.policy-type">partial-replication</prop> -->
			</props>
		</os-core:properties>
	</os-core:space>
	
	<os-core:giga-space id="gigaSpace" space="space" />
	
	<!-- Support @RemotingService component scanning -->
	<context:component-scan base-package="org.openspaces.timeseries" />
	<context:annotation-config />

	<!-- Enables the usage of @GigaSpaceContext annotation based injection. -->
	<os-core:giga-space-context />

	<!-- Support the @RemotingService annotation on a service -->
	<os-remoting:annotation-support />
	<os-core:annotation-support />
	<os-events:annotation-support />

	<os-remoting:service-exporter id="serviceExporter" />
</beans>